            @Html.DisplayFor(modelItem => item.Дата_соревнований)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Тип_соревнований)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Вид_спорта)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Спонсор_соревнований)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Город)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Адрес)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID_Соревнований }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_Соревнований }) |
